<!-- Hero Banner -->
<section class="hero-banner mb-5">
  <div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <!-- CSS Animation Carousel -->
      <div class="carousel-item active art-animation-1" style="height: 500px;">
        <div class="rainbow"></div>
        <div class="carousel-caption">
          <h3>Magical Art World</h3>
          <p>Where colors come to life with joy</p>
        </div>
      </div>
      <div class="carousel-item art-animation-2" style="height: 500px;">
        <div class="flower"></div>
        <div class="flower"></div>
        <div class="carousel-caption">
          <h3>Growing Creativity</h3>
          <p>Watch as ideas bloom and flourish</p>
        </div>
      </div>
      <div class="carousel-item art-animation-3" style="height: 500px;">
        <div class="color-splash"></div>
        <div class="color-splash"></div>
        <div class="color-splash"></div>
        <div class="star"></div>
        <div class="star"></div>
        <div class="star"></div>
        <div class="carousel-caption">
          <h3>Sparkle & Shine</h3>
          <p>Art that brings smiles and wonder</p>
        </div>
      </div>
    </div>
    
    <!-- Arrow Navigation -->
    <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
    
    <!-- Radio Button Indicators (Hidden) -->
    <div class="carousel-indicators" style="display: none;">
      <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
      <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
      <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
  </div>
</section>

<!-- Introduction -->
<section class="container mb-5">
  <div class="row align-items-center">
    <div class="col-md-6">
      <h2>Welcome to My Art Portfolio</h2>
      <p class="lead">I create artwork that explores the beauty of nature and human emotions.</p>
      <p>Through my drawings and videos, I aim to capture moments of tranquility and wonder that resonate with viewers on a personal level.</p>
      <a href="/about" class="btn btn-outline-primary">Learn More About Me</a>
    </div>
    <div class="col-md-6">
      <img src="/uploads/images/profile-placeholder.jpg" alt="Artist Profile" class="img-fluid rounded shadow">
    </div>
  </div>
</section>

<!-- Featured Artworks -->
<section class="container mb-5">
  <div class="row mb-4">
    <div class="col-12">
      <h2>Featured Artworks</h2>
      <p>A selection of my recent and notable pieces</p>
    </div>
  </div>
  
  <div class="row g-4">
    <% if (featuredArtworks && featuredArtworks.length > 0) { %>
      <% featuredArtworks.forEach(artwork => { %>
        <div class="col-md-6 col-lg-4">
          <div class="card h-100 shadow-sm">
            <% const mainImage = artwork.images.find(img => img.isMain) || artwork.images[0]; %>
            <% if (mainImage) { %>
              <img src="<%= mainImage.thumbnailPath || mainImage.path %>" class="card-img-top" alt="<%= artwork.title %>" style="height: 200px; object-fit: cover;">
            <% } else { %>
              <div class="bg-secondary" style="height: 200px;"></div>
            <% } %>
            <div class="card-body">
              <h5 class="card-title"><%= artwork.title %></h5>
              <p class="card-text text-muted"><%= artwork.year %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <% artwork.tags.slice(0, 2).forEach(tag => { %>
                    <span class="badge bg-light text-dark me-1"><%= tag %></span>
                  <% }); %>
                </div>
                <a href="/gallery/<%= artwork.slug %>" class="btn btn-sm btn-outline-primary">View Details</a>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <div class="col-12 text-center py-5">
        <p>No artworks to display yet.</p>
      </div>
    <% } %>
  </div>
  
  <div class="text-center mt-4">
    <a href="/gallery" class="btn btn-primary">View All Artworks</a>
  </div>
</section>