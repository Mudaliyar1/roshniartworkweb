<!-- Featured Artworks -->
<section class="container mb-5">
  <div class="text-center mb-5">
    <h2 class="mb-3">âœ¨ Featured Masterpieces âœ¨</h2>
    <p class="lead text-muted">A curated collection of my most beloved creations, each telling its own magical story</p>
  </div>
  
  <div class="row g-4">
    <% if (featuredArtworks && featuredArtworks.length > 0) { %>
      <% featuredArtworks.forEach(artwork => { %>
        <div class="col-md-6 col-lg-4">
          <div class="card h-100 shadow-sm" style="max-width: 320px; margin: 0 auto;">
            <% const mainImage = artwork.images.find(img => img.isMain) || artwork.images[0]; %>
            <% if (mainImage) { %>
              <div style="height: 250px; display: flex; align-items: center; justify-content: center; overflow: hidden; border-top-left-radius: .5rem; border-top-right-radius: .5rem; background: #fff;">
                <img src="<%= mainImage.thumbnailPath || mainImage.path %>" class="img-fluid" alt="<%= artwork.title %>" style="max-height: 90%; width: auto; object-fit: contain; margin: auto;">
              </div>
            <% } else { %>
              <div class="bg-secondary" style="width:100%; aspect-ratio: 4/3; border-top-left-radius: .5rem; border-top-right-radius: .5rem;"></div>
            <% } %>
            <div class="card-body">
              <h5 class="card-title"><%= artwork.title %></h5>
              <p class="card-text text-muted"><%= artwork.year %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <% artwork.tags.slice(0, 2).forEach(tag => { %>
                    <span class="badge bg-light text-dark me-1"><%= tag %></span>
                  <% }); %>
                </div>
                <a href="/gallery/<%= artwork.slug %>" class="btn btn-sm btn-outline-primary">View Details</a>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <div class="col-12 text-center py-5">
        <p>No artworks to display yet.</p>
      </div>
    <% } %>
  </div>
  
  <div class="text-center mt-4">
    <a href="/gallery" class="btn btn-primary">View All Artworks</a>
  </div>
</section>