<div class="page-header">
  <div class="d-flex justify-content-between align-items-start">
    <div>
      <h1><%= title %></h1>
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
          <% if (title !== 'Admin Dashboard') { %>
            <li class="breadcrumb-item active"><%= title %></li>
          <% } %>
        </ol>
      </nav>
    </div>
    <div class="btn-toolbar">
      <% if (title === 'Manage Artworks') { %>
        <a href="/admin/artworks/new" class="btn btn-admin-primary me-2">
          <i class="bi bi-plus-lg me-1"></i> Add New Artwork
        </a>
      <% } %>
      <a href="/" class="btn btn-admin-outline" target="_blank">
        <i class="bi bi-eye me-1"></i> View Site
      </a>
    </div>
  </div>
</div>