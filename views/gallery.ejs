<div class="container py-5">
  <!-- Gallery Header -->
  <div class="row mb-4">
    <div class="col-md-8">
      <h1>Gallery</h1>
      <p class="lead">Explore my collection of artwork</p>
    </div>
    <div class="col-md-4">
      <form action="/gallery" method="GET" class="d-flex">
        <input type="text" name="search" class="form-control me-2" placeholder="Search artworks..." value="<%= search || '' %>">
        <button type="submit" class="btn btn-outline-primary">Search</button>
      </form>
    </div>
  </div>

  <!-- Filters -->
  <div class="row mb-4">
    <div class="col-12">
      <button class="btn btn-outline-primary w-100 d-flex justify-content-between align-items-center mb-2" type="button" data-bs-toggle="collapse" data-bs-target="#filterCollapse" aria-expanded="false" aria-controls="filterCollapse" id="filterToggleBtn">
        <span><i class="bi bi-funnel-fill me-2"></i><span id="filterBtnText">Open Filters</span></span>
      </button>
      <div class="collapse" id="filterCollapse">
        <div class="card">
          <div class="card-body">
            <form action="/gallery" method="GET" class="row g-3">
              <div class="col-md-4">
                <label class="form-label">Filter by Year</label>
                <select name="year" class="form-select">
                  <option value="">All Years</option>
                  <% if (years && years.length > 0) { %>
                    <% years.forEach(y => { %>
                      <option value="<%= y %>" <%= year === y ? 'selected' : '' %>><%= y %></option>
                    <% }); %>
                  <% } %>
                </select>
              </div>
              <div class="col-md-4">
                <label class="form-label">Filter by Tag</label>
                <select name="tag" class="form-select">
                  <option value="">All Tags</option>
                  <% if (tags && tags.length > 0) { %>
                    <% tags.forEach(t => { %>
                      <option value="<%= t %>" <%= tag === t ? 'selected' : '' %>><%= t %></option>
                    <% }); %>
                  <% } %>
                </select>
              </div>
              <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">Apply Filters</button>
                <a href="/gallery" class="btn btn-outline-secondary">Reset</a>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Gallery Grid -->
  <div class="row g-4">
    <% if (artworks && artworks.length > 0) { %>
      <% artworks.forEach(artwork => { %>
        <div class="col-md-6 col-lg-4">
          <div class="card h-100 shadow-sm">
            <% const mainImage = artwork.images.find(img => img.isMain) || artwork.images[0]; %>
            <% if (mainImage) { %>
              <div style="height: 250px; display: flex; align-items: center; justify-content: center; overflow: hidden;">
                <img src="<%= mainImage.thumbnailPath || mainImage.path %>" class="img-fluid" alt="<%= artwork.title %>" style="max-height: 100%; width: auto; object-fit: contain;">
              </div>
            <% } else { %>
              <div class="bg-secondary" style="height: 250px;"></div>
            <% } %>
            <div class="card-body">
              <h5 class="card-title"><%= artwork.title %></h5>
              <p class="card-text text-muted"><%= artwork.year %></p>
              <div class="d-flex flex-wrap mb-2">
                <% artwork.tags.forEach(tag => { %>
                  <span class="badge bg-light text-dark me-1 mb-1"><%= tag %></span>
                <% }); %>
              </div>
              <p class="card-text"><%= artwork.description.substring(0, 100) %>...</p>
              <% if (artwork.video && (artwork.video.type === 'file' || artwork.video.type === 'embed')) { %>
                <div class="mb-2">
                  <span class="badge bg-danger text-white"><i class="bi bi-camera-video"></i> Video Available</span>
                </div>
              <% } %>
              <a href="/gallery/<%= artwork.slug %>" class="btn btn-outline-primary">View Details</a>
            </div>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <div class="col-12 text-center py-5">
        <p>No artworks found matching your criteria.</p>
        <a href="/gallery" class="btn btn-outline-primary">View All Artworks</a>
      </div>
    <% } %>
  </div>

  <!-- JavaScript for Filter Button -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const filterCollapse = document.getElementById('filterCollapse');
      const filterBtnText = document.getElementById('filterBtnText');
      
      // Update button text based on collapse state
      filterCollapse.addEventListener('show.bs.collapse', function () {
        filterBtnText.textContent = 'Close Filters';
      });
      
      filterCollapse.addEventListener('hide.bs.collapse', function () {
        filterBtnText.textContent = 'Open Filters';
      });
    });
  </script>

  <!-- Pagination -->
  <% if (totalPages > 1) { %>
    <div class="row mt-5">
      <div class="col-12">
        <nav aria-label="Gallery pagination">
          <ul class="pagination justify-content-center">
            <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
              <a class="page-link" href="/gallery?page=<%= currentPage - 1 %><%= search ? '&search=' + search : '' %><%= tag ? '&tag=' + tag : '' %><%= year ? '&year=' + year : '' %>" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
              </a>
            </li>
            <% for(let i = 1; i <= totalPages; i++) { %>
              <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                <a class="page-link" href="/gallery?page=<%= i %><%= search ? '&search=' + search : '' %><%= tag ? '&tag=' + tag : '' %><%= year ? '&year=' + year : '' %>"><%= i %></a>
              </li>
            <% } %>
            <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
              <a class="page-link" href="/gallery?page=<%= currentPage + 1 %><%= search ? '&search=' + search : '' %><%= tag ? '&tag=' + tag : '' %><%= year ? '&year=' + year : '' %>" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
              </a>
            </li>
          </ul>
        </nav>
      </div>
    </div>
  <% } %>
</div>