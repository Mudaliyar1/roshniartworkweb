<%- contentFor('body') %>

<div class="container mx-auto p-4">
  <h1 class="text-3xl font-bold mb-6">Media Backup History</h1>

  <div class="bg-white shadow-md rounded-lg p-6 mb-8">
    <h2 class="text-2xl font-semibold mb-4">Backup Records</h2>
    <% if (backups && backups.length > 0) { %>
      <div class="overflow-x-auto">
        <table class="min-w-full bg-white">
          <thead>
            <tr>
              <th class="py-2 px-4 border-b border-gray-200 bg-gray-100 text-left text-sm font-semibold text-gray-600">Backup Date</th>
              <th class="py-2 px-4 border-b border-gray-200 bg-gray-100 text-left text-sm font-semibold text-gray-600">Media Items</th>
              <th class="py-2 px-4 border-b border-gray-200 bg-gray-100 text-left text-sm font-semibold text-gray-600">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% backups.forEach(backup => { %>
              <tr class="hover:bg-gray-50">
                <td class="py-2 px-4 border-b border-gray-200"><%= new Date(backup.backupDate).toLocaleString() %></td>
                <td class="py-2 px-4 border-b border-gray-200"><%= backup.mediaItems.length %></td>
                <td class="py-2 px-4 border-b border-gray-200">
                  <form action="/admin/media/restore/<%= backup._id %>" method="POST" onsubmit="return confirm('Are you sure you want to restore from this backup? This will overwrite current media data.');">
                    <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-3 rounded text-xs">Restore</button>
                  </form>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <p class="text-gray-600">No backup records found.</p>
    <% } %>
  </div>
</div>