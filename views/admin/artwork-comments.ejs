<%- contentFor('body') %>

      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Comments for <%= artwork.title %></h1>
        <div class="btn-toolbar mb-2 mb-md-0">
          <div class="btn-group me-2">
            <a href="/admin/artworks" class="btn btn-sm btn-outline-secondary">Back to Artworks</a>
          </div>
        </div>
      </div>

      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th scope="col">User</th>
              <th scope="col">Comment</th>
              <th scope="col">Date</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (comments.length > 0) { %>
              <% comments.forEach(comment => { %>
                <tr>
                  <td><%= comment.displayUsername %></td>
                  <td><%= comment.text %></td>
                  <td><%= comment.createdAt.toLocaleDateString() %></td>
                  <td>
                    <form action="/admin/comments/delete/<%= comment._id %>?_method=DELETE" method="POST">
                      <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this comment?');">Delete</button>
                    </form>
                  </td>
                </tr>
              <% }); %>
            <% } else { %>
              <tr>
                <td colspan="4">No comments yet for this artwork.</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>